<div class="container card p-4">
    <div class="gap-3 align-items-center d-flex">
        <div class="col-md-5 d-flex align-items-center justify-content-center"
            style="background: #fff; border-top-left-radius: 1.5rem; border-bottom-left-radius: 1.5rem; padding: 15px;">
            <img src="<%= car.foto_mobil %>" alt="Car image" class="img-fluid" style="border-radius: 15px;">
        </div>
        <!-- <div class="col-md-6">
            <img src="<%= car.foto_mobil %>" alt="Car Image" style="width: 100%; border-radius: 10px;">
        </div> -->

        <div class="col-md-7">
            <p class="text-muted mb-1 fw-bold" style="font-size: 1.1em;">Mobil Details</p>
            <p><b>Model: </b>
                <%= car.model %>
            </p>
            <p><b>Tahun: </b>
                <%= car.tahun %>
            </p>
            <p><b>No plate: </b>
                <%= car.no_plat %>
            </p>
            <p><b>Status: </b>
                <%= car.status %>
            </p>
            <p>
                <b>Harga: </b>
                <span class="fw-semibold bg-success text-light badge">
                    Rp <%= car.harga.toString().replace(/\B(?=(\d{3})+(?!\d))/g, "." ) %>
                </span>
            </p>
        </div>
    </div>

    <div class="mt-4">
        <a href="/dashboard/cars">
            <button class="btn btn-primary shadow-sm d-flex gap-1 align-items-center p-2"><span><svg
                        xmlns="http://www.w3.org/2000/svg" width="1.2em" height="1.2em" viewBox="0 0 24 24">
                        <path fill="white" d="M8 7v4L2 6l6-5v4h5a8 8 0 1 1 0 16H4v-2h9a6 6 0 0 0 0-12z" />
                    </svg></span>Back</button>
        </a>
    </div>
</div>