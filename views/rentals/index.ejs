<div class="card">
    <div class="card-body">
        <h5 class="card-title">Daftar Rental</h5>
        <table id="rentalsTable" class="table datatable datatable-table">
            <thead>
                <tr>
                    <th>Nama</th>
                    <th>No Plat</th>
                    <th>Status</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% rentals.forEach(rental => { %>
                    <tr>
                        <td><%= rental.User.name %></td>
                        <td><%= rental.Car.no_plat %></td>
                        <td><%= rental.status %></td>
                        <td>
                            <a href="/dashboard/users/<%= rental.id %>" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> Lihat
                            </a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>
